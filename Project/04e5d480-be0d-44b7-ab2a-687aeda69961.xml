IF In_Real &lt;&gt; 0.0 THEN&#xD;
	Absolute :=(LOG(In:=ABS(In_Real)));&#xD;
	IF Absolute &gt; 0.0 THEN&#xD;
		units := RoundUp(Absolute);&#xD;
	ELSE&#xD;
		units := TRUNC(Absolute);&#xD;
	END_IF;&#xD;
	Temp_Desimalcount := 3 - units;&#xD;
	Desimalcount := DINT_TO_USINT(MAX(DINT#0, Temp_Desimalcount));&#xD;
ELSE&#xD;
	Desimalcount := 0;&#xD;
END_IF;&#xD;
Out_String := RealToFormatString(In:=In_Real, Exponent:=FALSE, Sign:=FALSE, MinLen:=3+Desimalcount, DecPlace:=Desimalcount);</Text></StructuredTextModel>